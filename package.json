{
  "name": "vue-ssr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite-node server/server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr server/entry-server.ts",
    "serve": "NODE_ENV=production vite-node server/server -w"
  },
  "dependencies": {
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/serve-static": "^1.15.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "less": "^4.1.3",
    "serve-static": "^1.15.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-node": "^0.25.8"
  }
}